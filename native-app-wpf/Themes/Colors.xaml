<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- BASE COLORS - GitHub Dark Palette -->
    <!-- ============================================== -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundDark">#0D1117</Color>
    <Color x:Key="BackgroundMedium">#161B22</Color>
    <Color x:Key="BackgroundLight">#21262D</Color>
    <Color x:Key="BackgroundHover">#30363D</Color>
    <Color x:Key="BackgroundElevated">#1C2128</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#E6EDF3</Color>
    <Color x:Key="TextSecondary">#8B949E</Color>
    <!-- WCAG AA compliant: #848D97 provides 4.5:1 contrast ratio -->
    <Color x:Key="TextMuted">#848D97</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentBlue">#58A6FF</Color>
    <Color x:Key="AccentBlueBright">#79B8FF</Color>
    <Color x:Key="AccentBlueDark">#388BFD</Color>
    <Color x:Key="AccentGreen">#3FB950</Color>
    <Color x:Key="AccentGreenBright">#56D364</Color>
    <Color x:Key="AccentOrange">#D29922</Color>
    <Color x:Key="AccentYellow">#F59E0B</Color>
    <Color x:Key="AccentRed">#F85149</Color>
    <Color x:Key="AccentRedBright">#FF7B72</Color>
    <Color x:Key="AccentPurple">#A371F7</Color>
    <Color x:Key="AccentPurpleBright">#BC8CFF</Color>

    <!-- State Backgrounds (subtle tints for panels) -->
    <Color x:Key="SuccessBackground">#153FB950</Color>
    <Color x:Key="ErrorBackground">#15F85149</Color>
    <Color x:Key="WarningBackground">#15D29922</Color>
    <Color x:Key="InfoBackground">#1558A6FF</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderDefault">#30363D</Color>
    <Color x:Key="BorderSubtle">#21262D</Color>
    <Color x:Key="BorderActive">#58A6FF</Color>

    <!-- ============================================== -->
    <!-- GLASS / ACRYLIC EFFECT COLORS -->
    <!-- Semi-transparent for layered depth -->
    <!-- ============================================== -->

    <Color x:Key="GlassDark">#E6161B22</Color>
    <Color x:Key="GlassMedium">#CC161B22</Color>
    <Color x:Key="GlassLight">#B3161B22</Color>
    <Color x:Key="GlassOverlay">#800D1117</Color>

    <!-- ============================================== -->
    <!-- SOLID BRUSHES -->
    <!-- ============================================== -->

    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}" />
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}" />
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}" />
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="{StaticResource BackgroundHover}" />
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="{StaticResource BackgroundElevated}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}" />

    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}" />
    <SolidColorBrush x:Key="AccentBlueBrightBrush" Color="{StaticResource AccentBlueBright}" />
    <SolidColorBrush x:Key="AccentBlueDarkBrush" Color="{StaticResource AccentBlueDark}" />
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}" />
    <SolidColorBrush x:Key="AccentGreenBrightBrush" Color="{StaticResource AccentGreenBright}" />
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}" />
    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}" />
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}" />
    <SolidColorBrush x:Key="AccentRedBrightBrush" Color="{StaticResource AccentRedBright}" />
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurple}" />
    <SolidColorBrush x:Key="AccentPurpleBrightBrush" Color="{StaticResource AccentPurpleBright}" />

    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource BorderDefault}" />
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtle}" />
    <SolidColorBrush x:Key="BorderActiveBrush" Color="{StaticResource BorderActive}" />

    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="{StaticResource SuccessBackground}" />
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="{StaticResource ErrorBackground}" />
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="{StaticResource WarningBackground}" />
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="{StaticResource InfoBackground}" />

    <!-- ============================================== -->
    <!-- GLASS / ACRYLIC BRUSHES -->
    <!-- For sidebar, panels, and overlay effects -->
    <!-- ============================================== -->

    <SolidColorBrush x:Key="GlassDarkBrush" Color="{StaticResource GlassDark}" />
    <SolidColorBrush x:Key="GlassMediumBrush" Color="{StaticResource GlassMedium}" />
    <SolidColorBrush x:Key="GlassLightBrush" Color="{StaticResource GlassLight}" />
    <SolidColorBrush x:Key="GlassOverlayBrush" Color="{StaticResource GlassOverlay}" />

    <!-- ============================================== -->
    <!-- GRADIENT BRUSHES -->
    <!-- For premium button effects and accents -->
    <!-- ============================================== -->

    <!-- Blue Accent Gradient (Primary Actions) -->
    <LinearGradientBrush x:Key="AccentBlueGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#58A6FF" Offset="0" />
        <GradientStop Color="#388BFD" Offset="1" />
    </LinearGradientBrush>

    <!-- Hover variant (brighter) -->
    <LinearGradientBrush x:Key="AccentBlueGradientHoverBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#79B8FF" Offset="0" />
        <GradientStop Color="#58A6FF" Offset="1" />
    </LinearGradientBrush>

    <!-- Green Success Gradient -->
    <LinearGradientBrush x:Key="AccentGreenGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#3FB950" Offset="0" />
        <GradientStop Color="#238636" Offset="1" />
    </LinearGradientBrush>

    <!-- Purple/Violet Accent Gradient -->
    <LinearGradientBrush x:Key="AccentPurpleGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#A371F7" Offset="0" />
        <GradientStop Color="#8957E5" Offset="1" />
    </LinearGradientBrush>

    <!-- Subtle card shine effect (top-left highlight) -->
    <LinearGradientBrush x:Key="CardShineBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#08FFFFFF" Offset="0" />
        <GradientStop Color="#00FFFFFF" Offset="0.5" />
    </LinearGradientBrush>

    <!-- Card hover highlight -->
    <LinearGradientBrush x:Key="CardHoverHighlightBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0CFFFFFF" Offset="0" />
        <GradientStop Color="#00FFFFFF" Offset="0.3" />
    </LinearGradientBrush>

    <!-- ============================================== -->
    <!-- NEON GLOW DROP SHADOW EFFECTS -->
    <!-- Apply via Element.Effect property -->
    <!-- ============================================== -->

    <!-- Blue Neon Glow (for primary buttons/active elements) -->
    <DropShadowEffect x:Key="NeonGlowBlue"
                      Color="#58A6FF"
                      BlurRadius="15"
                      ShadowDepth="0"
                      Opacity="0.6"
                      Direction="0" />

    <!-- Subtle Blue Glow (for hover states) -->
    <DropShadowEffect x:Key="NeonGlowBlueSubtle"
                      Color="#58A6FF"
                      BlurRadius="10"
                      ShadowDepth="0"
                      Opacity="0.4"
                      Direction="0" />

    <!-- Green Neon Glow (for success states) -->
    <DropShadowEffect x:Key="NeonGlowGreen"
                      Color="#3FB950"
                      BlurRadius="15"
                      ShadowDepth="0"
                      Opacity="0.6"
                      Direction="0" />

    <!-- Red Neon Glow (for error states) -->
    <DropShadowEffect x:Key="NeonGlowRed"
                      Color="#F85149"
                      BlurRadius="15"
                      ShadowDepth="0"
                      Opacity="0.6"
                      Direction="0" />

    <!-- Purple Neon Glow -->
    <DropShadowEffect x:Key="NeonGlowPurple"
                      Color="#A371F7"
                      BlurRadius="15"
                      ShadowDepth="0"
                      Opacity="0.6"
                      Direction="0" />

    <!-- Subtle elevation shadow (for cards) -->
    <DropShadowEffect x:Key="ElevationShadow"
                      Color="#000000"
                      BlurRadius="20"
                      ShadowDepth="4"
                      Opacity="0.4"
                      Direction="270" />

    <!-- Soft card shadow -->
    <DropShadowEffect x:Key="CardShadow"
                      Color="#000000"
                      BlurRadius="12"
                      ShadowDepth="2"
                      Opacity="0.3"
                      Direction="270" />

    <!-- Hover lift shadow -->
    <DropShadowEffect x:Key="CardHoverShadow"
                      Color="#000000"
                      BlurRadius="24"
                      ShadowDepth="8"
                      Opacity="0.5"
                      Direction="270" />

</ResourceDictionary>
