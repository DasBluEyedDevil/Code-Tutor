<UserControl x:Class="CodeTutor.Wpf.Controls.SkeletonCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:CodeTutor.Wpf.Controls">
    <controls:ShimmerEffect>
        <Border Style="{StaticResource CardBorder}"
                Width="320" Height="200"
                ClipToBounds="True">
            <Grid>
                <!-- Skeleton Content -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Badge Skeleton -->
                <Border Grid.Row="0"
                        Background="{StaticResource BackgroundLightBrush}"
                        CornerRadius="4"
                        Width="60" Height="24"
                        HorizontalAlignment="Left" />

                <!-- Title Skeleton -->
                <StackPanel Grid.Row="1" Margin="0,12,0,0">
                    <Border Background="{StaticResource BackgroundLightBrush}"
                            CornerRadius="4"
                            Height="20" Width="200"
                            HorizontalAlignment="Left" />
                    <Border Background="{StaticResource BackgroundLightBrush}"
                            CornerRadius="4"
                            Height="14" Width="280"
                            HorizontalAlignment="Left"
                            Margin="0,8,0,0" />
                    <Border Background="{StaticResource BackgroundLightBrush}"
                            CornerRadius="4"
                            Height="14" Width="160"
                            HorizontalAlignment="Left"
                            Margin="0,4,0,0" />
                </StackPanel>

                <!-- Stats Skeleton -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Border Background="{StaticResource BackgroundLightBrush}"
                            CornerRadius="4"
                            Height="12" Width="80" />
                    <Border Background="{StaticResource BackgroundLightBrush}"
                            CornerRadius="4"
                            Height="12" Width="40"
                            Margin="16,0,0,0" />
                </StackPanel>
            </Grid>
        </Border>
    </controls:ShimmerEffect>
</UserControl>
