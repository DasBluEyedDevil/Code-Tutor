<UserControl x:Class="CodeTutor.Wpf.Controls.PathTracerIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="28"
             Height="28">
    <Viewbox Stretch="Uniform">
        <Path x:Name="TracePath"
              Stroke="{Binding Stroke, RelativeSource={RelativeSource AncestorType=UserControl}}"
              StrokeThickness="{Binding StrokeThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
              StrokeDashCap="Round"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"
              StrokeLineJoin="Round"
              Fill="Transparent"
              Data="{Binding Data, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Viewbox>
</UserControl>
