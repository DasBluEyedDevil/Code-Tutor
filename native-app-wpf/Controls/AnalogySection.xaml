<UserControl x:Class="CodeTutor.Wpf.Controls.AnalogySection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{StaticResource CardBorder}"
            Background="#1A1A2F"
            BorderBrush="{StaticResource AccentPurpleBrush}"
            Margin="0,0,0,24">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Think of it this way"
                           Style="{StaticResource SubheadingText}"
                           Foreground="{StaticResource AccentPurpleBrush}" />
            </StackPanel>
            <TextBlock x:Name="ContentText"
                       Style="{StaticResource BodyText}"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</UserControl>
