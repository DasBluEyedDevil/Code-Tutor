<UserControl x:Class="CodeTutor.Wpf.Controls.ChatMessageBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:CodeTutor.Wpf.Behaviors">
    <Border x:Name="MessageBorder" Padding="12,8" MaxWidth="300"
            behaviors:AnimationBehaviors.EnableFadeInOnLoad="True">
        <TextBlock x:Name="MessageText"
                   TextWrapping="Wrap"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   FontSize="13"
                   Style="{StaticResource BodyText}"/>
    </Border>
</UserControl>
