<UserControl x:Class="CodeTutor.Wpf.Controls.ChatMessageBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:CodeTutor.Wpf.Controls">
    <Border x:Name="MessageBorder" Padding="12,8" MaxWidth="300">
        <Grid>
            <TextBlock x:Name="UserMessageText"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="13"
                       Style="{StaticResource BodyText}"
                       Visibility="Collapsed" />
            <TextBlock x:Name="AssistantMessageText"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="13"
                       Style="{StaticResource BodyText}"
                       Visibility="Collapsed" />
        </Grid>
    </Border>
</UserControl>
