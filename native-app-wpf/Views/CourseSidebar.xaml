<UserControl x:Class="CodeTutor.Wpf.Views.CourseSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer Style="{StaticResource DarkScrollViewer}">
        <Grid>
            <StackPanel x:Name="SidebarStack" Margin="12" CacheMode="BitmapCache">
            <!-- Back Button -->
            <Button Style="{StaticResource GhostButton}"
                    Click="BackButton_Click"
                    Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&lt;- " />
                    <TextBlock Text="All Courses" />
                </StackPanel>
            </Button>

            <!-- Course Overview link -->
            <Button Style="{StaticResource SidebarItemButton}"
                    Click="CourseOverview_Click"
                    Margin="0,0,0,8">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#x1F4CA; " FontFamily="Segoe UI Emoji" FontSize="12" />
                    <TextBlock Text="Course Overview" />
                </StackPanel>
            </Button>

            <Border Height="1"
                    Background="{StaticResource BorderDefaultBrush}"
                    Margin="0,0,0,12" />

            <!-- Course Title -->
            <TextBlock x:Name="CourseTitle"
                       Style="{StaticResource SubheadingText}"
                       TextWrapping="Wrap"
                       Margin="8,0,0,16" />

            <!-- Modules List -->
            <ItemsControl x:Name="ModulesList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,4">
                            <!-- Module Header -->
                            <Button Style="{StaticResource SidebarItemButton}"
                                    Click="ModuleHeader_Click"
                                    Tag="{Binding}"
                                    HorizontalAlignment="Stretch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Title}"
                                               Style="{StaticResource CaptionText}"
                                               TextWrapping="Wrap" />
                                    <TextBlock x:Name="ExpandIcon"
                                               Grid.Column="1"
                                               Text="&#x25BC;"
                                               FontSize="10"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource TextMutedBrush}" />
                                </Grid>
                            </Button>

                            <!-- Lessons (Expandable) -->
                            <ItemsControl ItemsSource="{Binding Lessons}"
                                          x:Name="LessonsList"
                                          Margin="16,4,0,0"
                                          RenderTransformOrigin="0.5,0">
                                <ItemsControl.RenderTransform>
                                    <TranslateTransform Y="0" />
                                </ItemsControl.RenderTransform>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource SidebarItemButton}"
                                                Click="LessonItem_Click"
                                                Tag="{Binding}"
                                                HorizontalAlignment="Stretch"
                                                Loaded="LessonItem_Loaded">
                                            <TextBlock Text="{Binding Title}"
                                                       Style="{StaticResource CaptionText}"
                                                       TextWrapping="Wrap" />
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Canvas x:Name="ActiveIndicatorLayer"
                Margin="12"
                IsHitTestVisible="False"
                Panel.ZIndex="2">
            <Border x:Name="ActiveIndicator"
                    Width="4"
                    Height="24"
                    Background="{StaticResource AccentBlueBrush}"
                    CornerRadius="2"
                    Opacity="0" />
        </Canvas>
        </Grid>
    </ScrollViewer>
</UserControl>
