<UserControl x:Class="CodeTutor.Wpf.Views.CoursePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Course Overview Content -->
        <ScrollViewer Style="{StaticResource DarkScrollViewer}" Padding="40">
            <StackPanel MaxWidth="800">
                <!-- Course Header -->
                <Border Background="{StaticResource AccentBlueBrush}"
                        CornerRadius="4"
                        Padding="8,4"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,16">
                    <TextBlock x:Name="LanguageBadge"
                               FontWeight="Bold"
                               Foreground="White"
                               FontSize="12" />
                </Border>

                <TextBlock x:Name="CourseTitle"
                           Style="{StaticResource TitleText}"
                           Margin="0,0,0,8" />
                <TextBlock x:Name="CourseDescription"
                           Style="{StaticResource BodyText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,32" />

                <!-- Course Stats -->
                <Border Style="{StaticResource CardBorder}" Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Course Overview"
                                   Style="{StaticResource SubheadingText}"
                                   Margin="0,0,0,16" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="ModuleCount"
                                           Style="{StaticResource HeadingText}"
                                           Foreground="{StaticResource AccentBlueBrush}" />
                                <TextBlock Text="Modules"
                                           Style="{StaticResource CaptionText}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="LessonCount"
                                           Style="{StaticResource HeadingText}"
                                           Foreground="{StaticResource AccentGreenBrush}" />
                                <TextBlock Text="Lessons"
                                           Style="{StaticResource CaptionText}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock x:Name="EstimatedTime"
                                           Style="{StaticResource HeadingText}"
                                           Foreground="{StaticResource AccentOrangeBrush}" />
                                <TextBlock Text="Hours"
                                           Style="{StaticResource CaptionText}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Start Button -->
                <Button x:Name="StartButton"
                        Style="{StaticResource PrimaryButton}"
                        Click="StartButton_Click"
                        HorizontalAlignment="Left">
                    <TextBlock Text="Start Learning ->" />
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
