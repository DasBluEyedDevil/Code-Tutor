<UserControl x:Class="CodeTutor.Wpf.Views.LandingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:CodeTutor.Wpf.Behaviors"
             xmlns:controls="clr-namespace:CodeTutor.Wpf.Controls">

    <ScrollViewer Style="{StaticResource DarkScrollViewer}" Padding="40">
        <StackPanel MaxWidth="1200">
            <!-- Header -->
            <TextBlock Text="Choose Your Language"
                       Style="{StaticResource TitleText}"
                       Margin="0,0,0,8" />
            <TextBlock Text="Select a programming language to start learning"
                       Style="{StaticResource BodyText}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,32" />

            <!-- Course Grid -->
            <ItemsControl x:Name="CourseList"
                          behaviors:AnimationBehaviors.EnableStaggeredEntrance="True"
                          behaviors:AnimationBehaviors.StaggerDelay="80">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource GhostButton}"
                                Click="CourseCard_Click"
                                Tag="{Binding}"
                                Margin="0,0,16,16">
                            <controls:AnimatedCard Width="320" Height="220">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Language Badge -->
                                    <Border Grid.Row="0"
                                            Background="{StaticResource AccentBlueBrush}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Language}"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   FontSize="12" />
                                    </Border>

                                    <!-- Course Info -->
                                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                                        <TextBlock Text="{Binding Title}"
                                                   Style="{StaticResource SubheadingText}"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding Description}"
                                                   Style="{StaticResource CaptionText}"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxHeight="60"
                                                   Margin="0,8,0,0" />
                                    </StackPanel>

                                    <!-- Stats Row (when runtime available) -->
                                    <StackPanel Grid.Row="2"
                                                Orientation="Horizontal"
                                                Visibility="{Binding IsRuntimeAvailable, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock Style="{StaticResource CaptionText}">
                                            <Run Text="{Binding ModuleCount, Mode=OneWay}" />
                                            <Run Text=" modules" />
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource CaptionText}"
                                                   Margin="16,0,0,0">
                                            <Run Text="{Binding EstimatedHours, Mode=OneWay}" />
                                            <Run Text="h" />
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Runtime Warning Banner (when runtime NOT available) -->
                                    <Border Grid.Row="2"
                                            Background="{StaticResource WarningBackgroundBrush}"
                                            BorderBrush="{StaticResource AccentOrangeBrush}"
                                            BorderThickness="0,1,0,0"
                                            Padding="0,8"
                                            Margin="-16,0,-16,-16"
                                            CornerRadius="0,0,8,8"
                                            Visibility="{Binding IsRuntimeAvailable, Converter={StaticResource InverseBoolToVisibility}}">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="&#x26A0; "
                                                           Foreground="{StaticResource AccentOrangeBrush}"
                                                           FontSize="12"
                                                           VerticalAlignment="Center" />
                                                <TextBlock Text="Runtime setup required"
                                                           Style="{StaticResource CaptionText}"
                                                           Foreground="{StaticResource AccentOrangeBrush}"
                                                           FontWeight="SemiBold" />
                                            </StackPanel>
                                            <TextBlock Text="Click to preview course content"
                                                       Style="{StaticResource CaptionText}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,2,0,0" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </controls:AnimatedCard>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Loading Skeleton Container -->
            <WrapPanel x:Name="SkeletonContainer"
                       Orientation="Horizontal"
                       Visibility="Collapsed">
                <!-- Skeletons added dynamically -->
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
