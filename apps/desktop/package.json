{
  "name": "code-tutor-desktop",
  "version": "1.0.0",
  "description": "Code Tutor Desktop Application",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "dev": "npm run build:electron && electron .",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:electron && electron-builder",
    "package": "npm run build:electron && electron-builder --dir",
    "dist": "npm run build:electron && electron-builder"
  },
  "build": {
    "appId": "com.codetutor.app",
    "productName": "Code Tutor",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "../web/dist/**/*",
      "../api/dist/**/*",
      "../../content/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../../content",
        "to": "content",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/node": "^20.10.5",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  }
}
