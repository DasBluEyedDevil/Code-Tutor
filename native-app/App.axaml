<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:CodeTutor.Native.Converters"
             xmlns:vmChallenges="using:CodeTutor.Native.ViewModels.Challenges"
             xmlns:vChallenges="using:CodeTutor.Native.Views.Challenges"
             x:Class="CodeTutor.Native.App"
             RequestedThemeVariant="Dark">

    <Application.Styles>
        <FluentTheme />
        <!-- Common Styles -->
        <StyleInclude Source="/Themes/Common.axaml" />
    </Application.Styles>

    <Application.Resources>
        <!-- Include Theme Resources -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme Colors (Dark by default) -->
                <ResourceInclude Source="/Themes/Dark.axaml" />
                <!-- Icons -->
                <ResourceInclude Source="/Themes/Icons.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:BoolToAngleConverter x:Key="BoolToAngleConverter" />
            <converters:BoolToCheckIconConverter x:Key="BoolToCheckIconConverter" />
            <converters:BoolToSuccessBrushConverter x:Key="BoolToSuccessBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>

    <Application.DataTemplates>
        <!-- Challenge ViewModels to Views mapping -->
        <DataTemplate DataType="vmChallenges:MultipleChoiceViewModel">
            <vChallenges:MultipleChoiceView />
        </DataTemplate>
        <DataTemplate DataType="vmChallenges:TrueFalseViewModel">
            <vChallenges:TrueFalseView />
        </DataTemplate>
        <DataTemplate DataType="vmChallenges:CodeOutputViewModel">
            <vChallenges:CodeOutputView />
        </DataTemplate>
        <DataTemplate DataType="vmChallenges:FreeCodingViewModel">
            <vChallenges:FreeCodingView />
        </DataTemplate>
        <DataTemplate DataType="vmChallenges:CodeCompletionViewModel">
            <vChallenges:CodeCompletionView />
        </DataTemplate>
        <DataTemplate DataType="vmChallenges:ConceptualViewModel">
            <vChallenges:ConceptualView />
        </DataTemplate>
    </Application.DataTemplates>
</Application>
