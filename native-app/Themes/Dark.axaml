<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Color Palette -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <Color x:Key="SurfaceColor">#252526</Color>
    <Color x:Key="CardColor">#2D2D30</Color>
    <Color x:Key="HeaderColor">#252526</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#E8E8E8</Color>
    <Color x:Key="SecondaryTextColor">#B4B4B4</Color>
    <Color x:Key="MutedTextColor">#808080</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#007ACC</Color>
    <Color x:Key="AccentHoverColor">#1C97EA</Color>
    <Color x:Key="AccentPressedColor">#005A9E</Color>

    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#4EC9B0</Color>
    <Color x:Key="WarningColor">#D7BA7D</Color>
    <Color x:Key="ErrorColor">#F48771</Color>
    <Color x:Key="InfoColor">#569CD6</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#3E3E42</Color>
    <Color x:Key="CardBorderColor">#3E3E42</Color>

    <!-- Interactive Colors -->
    <Color x:Key="HoverBackgroundColor">#2A2D2E</Color>
    <Color x:Key="PressedBackgroundColor">#1E1E1E</Color>

    <!-- Code Editor Colors -->
    <Color x:Key="CodeBackgroundColor">#1E1E1E</Color>
    <Color x:Key="OutputBackgroundColor">#0E1E0E</Color>

    <!-- Progress Colors -->
    <Color x:Key="ProgressBackgroundColor">#3E3E42</Color>

    <!-- Button Colors -->
    <Color x:Key="SecondaryButtonColor">#3E3E42</Color>
    <Color x:Key="SecondaryButtonHoverColor">#505050</Color>

    <!-- Badge Colors -->
    <Color x:Key="BadgeBackgroundColor">#3E3E42</Color>

    <!-- Semantic Background Colors (for cards) -->
    <Color x:Key="SuccessBackgroundColor">#1E3A32</Color>
    <Color x:Key="ErrorBackgroundColor">#3A2422</Color>
    <Color x:Key="InfoBackgroundColor">#1E2A3A</Color>
    <Color x:Key="InfoTextColor">#9CDCFE</Color>

    <!-- Convert Colors to Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardColor}" />
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderColor}" />

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}" />
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource AccentPressedColor}" />

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource CardBorderColor}" />

    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}" />
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="{StaticResource PressedBackgroundColor}" />

    <SolidColorBrush x:Key="CodeBackgroundBrush" Color="{StaticResource CodeBackgroundColor}" />
    <SolidColorBrush x:Key="OutputBackgroundBrush" Color="{StaticResource OutputBackgroundColor}" />

    <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="{StaticResource ProgressBackgroundColor}" />

    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="{StaticResource SecondaryButtonColor}" />
    <SolidColorBrush x:Key="SecondaryButtonHoverBrush" Color="{StaticResource SecondaryButtonHoverColor}" />

    <SolidColorBrush x:Key="BadgeBackgroundBrush" Color="{StaticResource BadgeBackgroundColor}" />

    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="{StaticResource SuccessBackgroundColor}" />
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="{StaticResource ErrorBackgroundColor}" />
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="{StaticResource InfoBackgroundColor}" />
    <SolidColorBrush x:Key="InfoTextBrush" Color="{StaticResource InfoTextColor}" />

</ResourceDictionary>
