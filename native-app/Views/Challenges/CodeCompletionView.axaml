<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CodeTutor.Native.ViewModels.Challenges"
             xmlns:controls="using:CodeTutor.Native.Controls"
             x:Class="CodeTutor.Native.Views.Challenges.CodeCompletionView"
             x:DataType="vm:CodeCompletionViewModel">

    <Border Classes="content-card" Padding="24">
        <Grid RowDefinitions="Auto,*,Auto">

            <!-- Challenge Header -->
            <StackPanel Grid.Row="0" Spacing="16" Margin="0,0,0,20">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding Challenge.Title}"
                              Classes="h3" />
                    <TextBlock Text="{Binding Challenge.Description}"
                              Classes="body"
                              TextWrapping="Wrap"
                              Opacity="0.8" />
                </StackPanel>

                <Border Classes="info-card">
                    <TextBlock Text="Complete the code by filling in the TODO sections."
                              Classes="body" />
                </Border>

                <!-- Hint Section -->
                <Border IsVisible="{Binding !!CurrentHint}"
                       Classes="info-card">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Hint:"
                                  Classes="h4"
                                  Foreground="{DynamicResource AccentBrush}" />
                        <TextBlock Text="{Binding CurrentHint}"
                                  Classes="body"
                                  TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Code Editor -->
            <Border Grid.Row="1"
                   Classes="code-block"
                   CornerRadius="8"
                   Padding="0"
                   MinHeight="300">
                <controls:CodeEditor Language="{Binding Language}"
                                    Text="{Binding Code, Mode=TwoWay}" />
            </Border>

            <!-- Bottom Section -->
            <StackPanel Grid.Row="2" Spacing="20" Margin="0,20,0,0">

                <!-- Actions -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Content="Check Solution"
                           Command="{Binding SubmitCommand}"
                           Classes="primary">
                        <Button.IsVisible>
                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="!IsValidating" />
                                <Binding Path="!HasSubmitted" />
                            </MultiBinding>
                        </Button.IsVisible>
                    </Button>

                    <ProgressBar IsIndeterminate="True"
                                Width="200"
                                IsVisible="{Binding IsValidating}"
                                Classes="primary-progress" />

                    <Button Content="Show Hint"
                           Command="{Binding ShowHintCommand}"
                           IsVisible="{Binding HasMoreHints}"
                           Classes="secondary" />

                    <Button Content="Show Solution"
                           Command="{Binding ShowSolutionCommand}"
                           IsVisible="{Binding HasSolution}"
                           Classes="secondary" />

                    <Button Content="Try Again"
                           Command="{Binding ResetCommand}"
                           IsVisible="{Binding HasSubmitted}"
                           Classes="secondary" />
                </StackPanel>

                <!-- Solution Display -->
                <Border IsVisible="{Binding ShowSolution}"
                       Classes="success-card">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Solution:"
                                  Classes="h4"
                                  Foreground="{DynamicResource SuccessBrush}" />
                        <Border Classes="code-block"
                               Background="{DynamicResource CodeBackgroundBrush}"
                               CornerRadius="8"
                               Padding="16">
                            <SelectableTextBlock Text="{Binding Solution}"
                                               FontFamily="Cascadia Code,Consolas,Courier New"
                                               FontSize="13"
                                               TextWrapping="NoWrap" />
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Test Results -->
                <Border IsVisible="{Binding !!Result}"
                       Classes="content-card">
                    <StackPanel Spacing="12">
                        <TextBlock Classes="h4">
                            <Run Text="Test Results: " />
                            <Run Text="{Binding Result.Feedback}" />
                        </TextBlock>

                        <TextBlock Classes="body">
                            <Run Text="Score: " />
                            <Run Text="{Binding Result.Score}" FontWeight="Bold" />
                            <Run Text=" / " />
                            <Run Text="{Binding Result.MaxScore}" />
                        </TextBlock>

                        <!-- Individual Test Results -->
                        <ItemsControl ItemsSource="{Binding Result.TestResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="test-result-item" Margin="0,4">
                                        <StackPanel Spacing="4">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="{Binding Passed, Converter={StaticResource BoolToCheckIconConverter}}"
                                                         Width="16" Height="16"
                                                         Foreground="{Binding Passed, Converter={StaticResource BoolToSuccessBrushConverter}}" />
                                                <TextBlock Text="{Binding Description}"
                                                          Classes="body"
                                                          FontWeight="Medium" />
                                            </StackPanel>

                                            <StackPanel IsVisible="{Binding !Passed}" Spacing="4" Margin="24,0,0,0">
                                                <TextBlock Text="{Binding Error}"
                                                          IsVisible="{Binding !!Error}"
                                                          Classes="caption"
                                                          Foreground="{DynamicResource ErrorBrush}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>

        </Grid>
    </Border>
</UserControl>
