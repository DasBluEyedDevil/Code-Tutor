<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CodeTutor.Native.ViewModels.Challenges"
             x:Class="CodeTutor.Native.Views.Challenges.ConceptualView"
             x:DataType="vm:ConceptualViewModel">

    <Border Classes="content-card" Padding="24">
        <StackPanel Spacing="20">

            <!-- Challenge Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding Challenge.Title}"
                          Classes="h3" />
                <TextBlock Text="{Binding Challenge.Description}"
                          Classes="body"
                          TextWrapping="Wrap"
                          Opacity="0.8" />
            </StackPanel>

            <!-- Question -->
            <TextBlock Text="{Binding Question}"
                      Classes="h4"
                      TextWrapping="Wrap" />

            <!-- Answer Input -->
            <StackPanel Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Your Answer:"
                              Classes="body"
                              FontWeight="Medium" />
                    <TextBlock IsVisible="{Binding !!MinWords}"
                              Classes="caption"
                              Opacity="0.7">
                        <Run Text="(" />
                        <Run Text="{Binding WordCount}" />
                        <Run Text=" / " />
                        <Run Text="{Binding MinWords}" />
                        <Run Text=" words)" />
                    </TextBlock>
                </StackPanel>

                <TextBox Text="{Binding Answer}"
                        IsEnabled="{Binding !HasSubmitted}"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        MinHeight="200"
                        Watermark="Write your explanation here..." />
            </StackPanel>

            <!-- Key Points Hint -->
            <Border IsVisible="{Binding HasKeyPoints}"
                   Classes="info-card">
                <StackPanel Spacing="8">
                    <TextBlock Text="Consider these key concepts:"
                              Classes="body"
                              FontWeight="Medium" />
                    <ItemsControl ItemsSource="{Binding Challenge.KeyPoints}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4">
                                    <TextBlock Text="â€¢" Classes="body" />
                                    <TextBlock Text="{Binding}"
                                              Classes="body"
                                              TextWrapping="Wrap" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Hint Section -->
            <Border IsVisible="{Binding !!CurrentHint}"
                   Classes="info-card">
                <StackPanel Spacing="8">
                    <TextBlock Text="Hint:"
                              Classes="h4"
                              Foreground="{DynamicResource AccentBrush}" />
                    <TextBlock Text="{Binding CurrentHint}"
                              Classes="body"
                              TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Submit Answer"
                       Command="{Binding SubmitCommand}"
                       Classes="primary" />

                <Button Content="Show Hint"
                       Command="{Binding ShowHintCommand}"
                       IsVisible="{Binding HasMoreHints}"
                       Classes="secondary" />

                <Button Content="Show Sample Answer"
                       Command="{Binding ShowSampleAnswerCommand}"
                       IsVisible="{Binding HasSampleAnswer}"
                       Classes="secondary" />

                <Button Content="Try Again"
                       Command="{Binding ResetCommand}"
                       IsVisible="{Binding HasSubmitted}"
                       Classes="secondary" />
            </StackPanel>

            <!-- Sample Answer Display -->
            <Border IsVisible="{Binding ShowSampleAnswer}"
                   Classes="success-card">
                <StackPanel Spacing="12">
                    <TextBlock Text="Sample Answer:"
                              Classes="h4"
                              Foreground="{DynamicResource SuccessBrush}" />
                    <TextBlock Text="{Binding SampleAnswer}"
                              Classes="body"
                              TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!-- Result -->
            <Border IsVisible="{Binding !!Result}"
                   Classes="info-card">
                <StackPanel Spacing="12">
                    <TextBlock Text="Answer Submitted"
                              Classes="h4"
                              Foreground="{DynamicResource AccentBrush}" />
                    <TextBlock Text="{Binding Result.Feedback}"
                              Classes="body"
                              TextWrapping="Wrap" />
                    <TextBlock Classes="body">
                        <Run Text="Score: " />
                        <Run Text="{Binding Result.Score}" FontWeight="Bold" />
                        <Run Text=" / " />
                        <Run Text="{Binding Result.MaxScore}" />
                    </TextBlock>
                    <TextBlock Text="Note: Conceptual answers are partially auto-graded. Your instructor may provide additional feedback."
                              Classes="caption"
                              Opacity="0.7"
                              TextWrapping="Wrap" />
                </StackPanel>
            </Border>

        </StackPanel>
    </Border>
</UserControl>
