<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CodeTutor.Native.ViewModels.Challenges"
             xmlns:controls="using:CodeTutor.Native.Controls"
             x:Class="CodeTutor.Native.Views.Challenges.FreeCodingView"
             x:DataType="vm:FreeCodingViewModel">

    <Border Classes="content-card" Padding="24">
        <Grid RowDefinitions="Auto,*,Auto">

            <!-- Challenge Header -->
            <StackPanel Grid.Row="0" Spacing="16" Margin="0,0,0,20">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding Challenge.Title}"
                              Classes="h3" />
                    <TextBlock Text="{Binding Challenge.Description}"
                              Classes="body"
                              TextWrapping="Wrap"
                              Opacity="0.8" />
                </StackPanel>

                <!-- Hint Section -->
                <Border IsVisible="{Binding !!CurrentHint}"
                       Classes="info-card">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Hint:"
                                  Classes="h4"
                                  Foreground="{DynamicResource AccentBrush}" />
                        <TextBlock Text="{Binding CurrentHint}"
                                  Classes="body"
                                  TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Code Editor -->
            <Border Grid.Row="1"
                   Classes="code-block"
                   CornerRadius="8"
                   Padding="0"
                   MinHeight="300">
                <controls:CodeEditor Language="{Binding Language}"
                                    Text="{Binding Code, Mode=TwoWay}" />
            </Border>

            <!-- Bottom Section -->
            <StackPanel Grid.Row="2" Spacing="20" Margin="0,20,0,0">

                <!-- Actions -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Content="Run Tests"
                           Command="{Binding SubmitCommand}"
                           Classes="primary">
                        <Button.IsVisible>
                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="!IsValidating" />
                                <Binding Path="!HasSubmitted" />
                            </MultiBinding>
                        </Button.IsVisible>
                    </Button>

                    <ProgressBar IsIndeterminate="True"
                                Width="200"
                                IsVisible="{Binding IsValidating}"
                                Classes="primary-progress" />

                    <Button Content="Show Hint"
                           Command="{Binding ShowHintCommand}"
                           IsVisible="{Binding HasMoreHints}"
                           Classes="secondary" />

                    <Button Content="Show Solution"
                           Command="{Binding ShowSolutionCommand}"
                           IsVisible="{Binding HasSolution}"
                           Classes="secondary" />

                    <Button Content="Try Again"
                           Command="{Binding ResetCommand}"
                           IsVisible="{Binding HasSubmitted}"
                           Classes="secondary" />
                </StackPanel>

                <!-- Solution Display -->
                <Border IsVisible="{Binding ShowSolution}"
                       Classes="success-card">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Solution:"
                                  Classes="h4"
                                  Foreground="{DynamicResource SuccessBrush}" />
                        <Border Classes="code-block"
                               Background="{DynamicResource CodeBackgroundBrush}"
                               CornerRadius="8"
                               Padding="16">
                            <SelectableTextBlock Text="{Binding Solution}"
                                               FontFamily="Cascadia Code,Consolas,Courier New"
                                               FontSize="13"
                                               TextWrapping="NoWrap" />
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Test Results -->
                <Border IsVisible="{Binding !!Result}"
                       Classes="content-card">
                    <StackPanel Spacing="12">
                        <TextBlock Classes="h4">
                            <Run Text="Test Results: " />
                            <Run Text="{Binding Result.Feedback}" />
                        </TextBlock>

                        <TextBlock Classes="body">
                            <Run Text="Score: " />
                            <Run Text="{Binding Result.Score}" FontWeight="Bold" />
                            <Run Text=" / " />
                            <Run Text="{Binding Result.MaxScore}" />
                        </TextBlock>

                        <!-- Individual Test Results -->
                        <ItemsControl ItemsSource="{Binding Result.TestResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="test-result-item" Margin="0,4">
                                        <StackPanel Spacing="4">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="{Binding Passed, Converter={StaticResource BoolToCheckIconConverter}}"
                                                         Width="16" Height="16"
                                                         Foreground="{Binding Passed, Converter={StaticResource BoolToSuccessBrushConverter}}" />
                                                <TextBlock Text="{Binding Description}"
                                                          Classes="body"
                                                          FontWeight="Medium" />
                                            </StackPanel>

                                            <StackPanel IsVisible="{Binding !Passed}" Spacing="4" Margin="24,0,0,0">
                                                <TextBlock Text="{Binding Error}"
                                                          IsVisible="{Binding !!Error}"
                                                          Classes="caption"
                                                          Foreground="{DynamicResource ErrorBrush}" />
                                                <StackPanel IsVisible="{Binding !!ExpectedOutput}">
                                                    <TextBlock Text="Expected:"
                                                              Classes="caption"
                                                              Opacity="0.7" />
                                                    <TextBlock Text="{Binding ExpectedOutput}"
                                                              Classes="caption"
                                                              FontFamily="Cascadia Code,Consolas,Courier New" />
                                                </StackPanel>
                                                <StackPanel IsVisible="{Binding !!ActualOutput}">
                                                    <TextBlock Text="Got:"
                                                              Classes="caption"
                                                              Opacity="0.7" />
                                                    <TextBlock Text="{Binding ActualOutput}"
                                                              Classes="caption"
                                                              FontFamily="Cascadia Code,Consolas,Courier New" />
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Bonus Challenges (shown after all tests pass) -->
                <Border Classes="success-card" Margin="0,8,0,0">
                    <Border.IsVisible>
                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                            <Binding Path="Result.IsCorrect" />
                            <Binding Path="HasBonusChallenges" />
                        </MultiBinding>
                    </Border.IsVisible>

                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="M12 2L2 22h20L12 2zM11 10v6h2v-6h-2zm0 8v2h2v-2h-2z"
                                     Width="20" Height="20"
                                     Foreground="{DynamicResource SuccessColor}"/>
                            <TextBlock Text="Bonus Challenges ðŸŽ‰"
                                      Classes="h4"
                                      Foreground="{DynamicResource SuccessColor}"/>
                        </StackPanel>

                        <TextBlock Text="Great job! Try these bonus challenges to level up:"
                                  Classes="body"
                                  TextWrapping="Wrap"
                                  Opacity="0.9"/>

                        <ItemsControl ItemsSource="{Binding Challenge.BonusChallenges}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceColor}"
                                           BorderBrush="{DynamicResource BorderColor}"
                                           BorderThickness="1"
                                           CornerRadius="6"
                                           Padding="12"
                                           Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="â­"
                                                      FontSize="16"
                                                      VerticalAlignment="Top"
                                                      Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding}"
                                                      Classes="body"
                                                      TextWrapping="Wrap"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>

        </Grid>
    </Border>
</UserControl>
