<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CodeTutor.Native.ViewModels.Challenges"
             x:Class="CodeTutor.Native.Views.Challenges.CodeOutputView"
             x:DataType="vm:CodeOutputViewModel">

    <Border Classes="content-card" Padding="24">
        <StackPanel Spacing="20">

            <!-- Challenge Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding Challenge.Title}"
                          Classes="h3" />
                <TextBlock Text="{Binding Challenge.Description}"
                          Classes="body"
                          TextWrapping="Wrap"
                          Opacity="0.8" />
            </StackPanel>

            <!-- Code Display -->
            <Border Classes="code-block"
                   Background="{DynamicResource CodeBackgroundBrush}"
                   CornerRadius="8"
                   Padding="16">
                <SelectableTextBlock Text="{Binding Code}"
                                   FontFamily="Cascadia Code,Consolas,Courier New"
                                   FontSize="13"
                                   TextWrapping="NoWrap" />
            </Border>

            <!-- Run Button (if allowed) -->
            <Button Content="â–¶ Run Code to See Output"
                   Command="{Binding RunCodeCommand}"
                   IsVisible="{Binding AllowRun}"
                   Classes="secondary"
                   HorizontalAlignment="Center" />

            <!-- Actual Output (after running) -->
            <Border IsVisible="{Binding !!ActualOutput}"
                   Classes="output-block">
                <StackPanel Spacing="8">
                    <TextBlock Text="Output:"
                              Classes="caption"
                              Opacity="0.7" />
                    <Border Background="{DynamicResource OutputBackgroundBrush}"
                           CornerRadius="4"
                           Padding="12">
                        <SelectableTextBlock Text="{Binding ActualOutput}"
                                           FontFamily="Cascadia Code,Consolas,Courier New"
                                           FontSize="12" />
                    </Border>
                </StackPanel>
            </Border>

            <!-- User Input -->
            <StackPanel Spacing="8">
                <TextBlock Text="What will this code output?"
                          Classes="body"
                          FontWeight="Medium" />
                <TextBox Text="{Binding UserOutput}"
                        IsEnabled="{Binding !HasSubmitted}"
                        Watermark="Enter the expected output..."
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        MinHeight="80" />
            </StackPanel>

            <!-- Hint Section -->
            <Border IsVisible="{Binding !!CurrentHint}"
                   Classes="info-card">
                <StackPanel Spacing="8">
                    <TextBlock Text="Hint:"
                              Classes="h4"
                              Foreground="{DynamicResource AccentBrush}" />
                    <TextBlock Text="{Binding CurrentHint}"
                              Classes="body"
                              TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Submit Answer"
                       Command="{Binding SubmitCommand}"
                       Classes="primary" />

                <Button Content="Show Hint"
                       Command="{Binding ShowHintCommand}"
                       IsVisible="{Binding HasMoreHints}"
                       Classes="secondary" />

                <Button Content="Try Again"
                       Command="{Binding ResetCommand}"
                       IsVisible="{Binding HasSubmitted}"
                       Classes="secondary" />
            </StackPanel>

            <!-- Result -->
            <Border IsVisible="{Binding !!Result}"
                   Classes="success-card">
                <StackPanel Spacing="12">
                    <TextBlock Text="{Binding Result.IsCorrect, StringFormat='Result: {0}'}"
                              Classes="h4" />
                    <TextBlock Text="{Binding Result.Feedback}"
                              Classes="body"
                              TextWrapping="Wrap" />
                    <TextBlock Classes="body">
                        <Run Text="Score: " />
                        <Run Text="{Binding Result.Score}" FontWeight="Bold" />
                        <Run Text=" / " />
                        <Run Text="{Binding Result.MaxScore}" />
                    </TextBlock>
                </StackPanel>
            </Border>

        </StackPanel>
    </Border>
</UserControl>
