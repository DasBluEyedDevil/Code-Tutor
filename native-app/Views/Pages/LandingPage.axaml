<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CodeTutor.Native.ViewModels.Pages"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="CodeTutor.Native.Views.Pages.LandingPage"
             x:DataType="vm:LandingPageViewModel">

    <Design.DataContext>
        <vm:LandingPageViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Border Grid.Row="0" Classes="page-header">
            <StackPanel Spacing="8" Margin="32,24">
                <TextBlock Classes="h1" Text="Code Tutor" />
                <TextBlock Classes="subtitle"
                          Text="Learn programming languages interactively"
                          Opacity="0.7" />
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="32" Spacing="24">

                <!-- Loading State -->
                <Border IsVisible="{Binding IsLoading}"
                       Classes="loading-container">
                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                    Width="200"
                                    Classes="primary-progress" />
                        <TextBlock Text="Loading courses..."
                                  HorizontalAlignment="Center"
                                  Classes="body" />
                    </StackPanel>
                </Border>

                <!-- Error State -->
                <Border IsVisible="{Binding HasError}"
                       Classes="error-container">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="{StaticResource AlertIcon}"
                                     Foreground="{DynamicResource ErrorBrush}"
                                     Width="24" Height="24" />
                            <TextBlock Text="Error Loading Courses"
                                      Classes="h3"
                                      Foreground="{DynamicResource ErrorBrush}" />
                        </StackPanel>

                        <TextBlock Text="{Binding ErrorMessage}"
                                  Classes="body"
                                  TextWrapping="Wrap" />

                        <Button Content="Retry"
                               Command="{Binding RetryLoadCommand}"
                               Classes="primary" />
                    </StackPanel>
                </Border>

                <!-- Courses Grid -->
                <ItemsControl ItemsSource="{Binding Courses}"
                             IsVisible="{Binding !IsLoading}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Classes="course-card"
                                   Command="{Binding $parent[ItemsControl].((vm:LandingPageViewModel)DataContext).SelectCourseCommand}"
                                   CommandParameter="{Binding}"
                                   Margin="8">
                                <StackPanel Spacing="16" Padding="24">
                                    <!-- Course Icon/Language -->
                                    <Border Classes="course-icon"
                                           CornerRadius="8"
                                           Padding="16"
                                           HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Language}"
                                                  Classes="h2"
                                                  Foreground="White" />
                                    </Border>

                                    <!-- Course Info -->
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding Title}"
                                                  Classes="h3"
                                                  TextWrapping="Wrap" />

                                        <TextBlock Text="{Binding Description}"
                                                  Classes="body"
                                                  Opacity="0.8"
                                                  TextWrapping="Wrap"
                                                  MaxLines="3"
                                                  TextTrimming="CharacterEllipsis" />
                                    </StackPanel>

                                    <!-- Metadata -->
                                    <StackPanel Orientation="Horizontal"
                                               Spacing="16">
                                        <Border Classes="badge">
                                            <TextBlock Text="{Binding Difficulty}"
                                                      Classes="caption" />
                                        </Border>

                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <PathIcon Data="{StaticResource ClockIcon}"
                                                     Width="14" Height="14"
                                                     Opacity="0.7" />
                                            <TextBlock Text="{Binding EstimatedHours, StringFormat='{}{0}h'}"
                                                      Classes="caption"
                                                      Opacity="0.7" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <PathIcon Data="{StaticResource BookIcon}"
                                                     Width="14" Height="14"
                                                     Opacity="0.7" />
                                            <TextBlock Text="{Binding ModuleCount, StringFormat='{}{0} modules'}"
                                                      Classes="caption"
                                                      Opacity="0.7" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
