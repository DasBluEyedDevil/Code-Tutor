<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CodeTutor.Native.ViewModels.Pages"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="CodeTutor.Native.Views.Pages.NotFoundPage"
             x:DataType="vm:NotFoundPageViewModel">

    <Design.DataContext>
        <vm:NotFoundPageViewModel/>
    </Design.DataContext>

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Spacing="24" MaxWidth="500">

            <!-- 404 Icon -->
            <Viewbox Width="120" Height="120" HorizontalAlignment="Center">
                <PathIcon Data="{StaticResource AlertTriangleIcon}"
                         Foreground="{DynamicResource WarningBrush}" />
            </Viewbox>

            <!-- Error Message -->
            <StackPanel Spacing="12">
                <TextBlock Text="Page Not Found"
                          Classes="h1"
                          HorizontalAlignment="Center" />
                <TextBlock Text="The page you're looking for doesn't exist or has been moved."
                          Classes="body"
                          TextAlignment="Center"
                          Opacity="0.7"
                          TextWrapping="Wrap" />
            </StackPanel>

            <!-- Error Details -->
            <Border Classes="error-container"
                   IsVisible="{Binding !!ErrorMessage}">
                <TextBlock Text="{Binding ErrorMessage}"
                          Classes="caption"
                          TextWrapping="Wrap"
                          TextAlignment="Center" />
            </Border>

            <!-- Actions -->
            <StackPanel Spacing="12" HorizontalAlignment="Center">
                <Button Content="Go to Home"
                       Command="{Binding GoHomeCommand}"
                       Classes="primary"
                       HorizontalAlignment="Center" />
                <Button Content="Go Back"
                       Command="{Binding GoBackCommand}"
                       Classes="secondary"
                       HorizontalAlignment="Center" />
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
