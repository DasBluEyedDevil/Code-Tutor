{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "module.schema.json",
  "title": "Module Metadata",
  "description": "Schema for module.json files that define module-level metadata within a course.",
  "type": "object",
  "required": [
    "id",
    "title",
    "description",
    "difficulty",
    "estimatedHours"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^module-\\d{2}$",
      "description": "Standardized module identifier in format module-{NN} (e.g. 'module-01', 'module-16')"
    },
    "title": {
      "type": "string",
      "description": "Human-readable module title"
    },
    "description": {
      "type": "string",
      "description": "Module description summarizing topics covered"
    },
    "difficulty": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"],
      "description": "Module difficulty level"
    },
    "estimatedHours": {
      "type": "number",
      "minimum": 0,
      "description": "Estimated hours to complete the module"
    },
    "order": {
      "type": "integer",
      "minimum": 1,
      "description": "Display order within the course (1-based)"
    }
  },
  "additionalProperties": true
}
