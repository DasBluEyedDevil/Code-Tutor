{
  "name": "code-tutor",
  "version": "1.0.0",
  "private": true,
  "description": "Unified multi-language training platform",
  "workspaces": [
    "apps/*",
    "apps/executors/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:executor:python": "npm run dev --workspace=apps/executors/python",
    "dev": "concurrently \"npm:dev:*\"",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
